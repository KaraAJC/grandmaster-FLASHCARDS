<h1 class="title">SIGNUP!</h1>
  <% if @errors %>
    <% @errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

<form action="/signup" method="POST">
  <input class="login" id="username" type="text" name="username" placeholder="Username"/>
  <input class="login" id="password" type="password" name="password" placeholder="Password"/>
  <input class="submit_form" type="submit" value="Signup">
</form>
<br>
